<% @employees.each do |employee| %>
  <tr>
    <td><%= link_to employee.id, employee_path(employee) %></td>
    <td><%= employee.name %></td>
    <td>
      <% employee.specialities.each do |speciality| %>
      &rdquo;<%= speciality.name %>&rdquo;;&nbsp;
    <% end %>
    </td>
    <td><%= formatDate(employee.created_at, false) %></td>
    <td>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_employee_path(employee), :class => 'btn btn-default btn-xs' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  employee_path(employee),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-xs btn-danger' %>
    </td>
  </tr>
<% end %>